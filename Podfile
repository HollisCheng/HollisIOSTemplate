# Uncomment the next line to define a global platform for your project
 platform :ios, '9.0'

target 'HollisIOSTemplate' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
   use_frameworks!

  # Pods for HollisIOSTemplate
# Facebook
pod 'FBSDKCoreKit', '~> 4.13'
pod 'FBSDKLoginKit', '~> 4.13'
pod 'FBSDKShareKit', '~> 4.13'

# Google
pod 'Google/SignIn'
pod 'GoogleMaps'
pod 'Google/Analytics'
pod 'GoogleIDFASupport', '~> 3.14'

# Firebase
pod 'Firebase/Core'
pod 'Firebase/AdMob'

# Netowrking
pod 'AFNetworking', '~> 3.1'

# Async Image Loader
pod 'SDWebImage'

# AlertView & ActionSheet
pod 'UIAlertController+Blocks', '~> 0.9'
pod 'UIAlertView+Blocks', '~> 0.9'
pod 'UIActionSheet+Blocks', '~> 0.9'

# Loading View
pod 'MBProgressHUD', '~> 0.9'

# Slide Menu
pod 'iOS-Slide-Menu', '~> 1.5'

# iCarousel
pod 'iCarousel'

# WebView
pod 'KINWebBrowser', '~> 1.3'

# Keyboard
pod 'TPKeyboardAvoiding', '~> 1.3'

# AttributedLabel
pod 'TTTAttributedLabel', '~> 2.0'

# NJKWebViewProgress
pod 'NJKWebViewProgress', '~> 0.2'

# Calendar
pod 'FSCalendar', '~> 2.0'

# Location
pod 'INTULocationManager', '~> 4.1'

# Popup
pod 'KLCPopup', '~> 1.0'

# SHXMLParser
pod 'SHXMLParser', '~> 1.1'

# MXSegmentedPager
pod 'MXSegmentedPager', '~> 3.0.4'

# DACircularProgress
pod 'DACircularProgress', '~> 2.3'

# Youtube Player
pod 'XCDYouTubeKit', '~> 2.5'

# CollectionView Waterfall
pod 'CHTCollectionViewWaterfallLayout', '~> 0.9'

# Keychain
pod 'SAMKeychain', '~> 1.5'

# QBImagePickerController
pod 'QBImagePickerController'

# AES
pod 'CocoaSecurity', '~> 1.2'

# HTML
pod 'HTMLReader', '~> 2.0'

# AppsFlyerFramework
pod 'AppsFlyerFramework'


  target 'HollisIOSTemplateTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'HollisIOSTemplateUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
